<nav class="navbar navbar-light bg-light">
  <div class="container d-flex justify-content-between align-items-center">

    <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand" %>

    <div class="d-flex align-items-center">
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary disabled" %>
    </div>
  </div>
</nav>

<div class="container mt-5 col-md-6">
  <h1 class="mb-4">Add a new Flat</h1>

  <%= simple_form_for @flat do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <div class="d-flex">
      <%= f.button :submit, 'Create Flat', class: 'btn btn-primary me-3' %>
      <%= link_to 'Cancel', flats_path, class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>
