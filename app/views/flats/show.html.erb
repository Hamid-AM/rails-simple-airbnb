<nav class="navbar navbar-light bg-light">
  <div class="container d-flex justify-content-between align-items-center">

    <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand" %>

    <div class="d-flex align-items-center">
      <form class="d-flex me-3" action="<%= flats_path %>" method="get">
        <input
          class="form-control me-2"
          type="search"
          name="query"
          placeholder="Search for flats"
          aria-label="Search"
          value="<%= params[:query] %>">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1 class="mb-3"><%= @flat.name %></h1>
      <p class="text-muted"><%= @flat.address %></p>
      <div class="mb-4">
      <img class="card-img-top" src="https://imgs.search.brave.com/ldkXCcMcXKeru5gPrYXcNxNhCiurh70UWIl9TXTZUnY/rs:fit:860:0:0:0/g:ce/aHR0cHM6Ly9pbWcu/ZnJlZXBpay5jb20v/cGhvdG9zLWdyYXR1/aXRlL2JlbGxlLW1h/aXNvbi1icmlxdWVz/LXJvdWdlcy1sdW1p/ZXJlcy1kZWNvcmF0/aXZlc181Mzg3Ni00/OTM3Mi5qcGc_c2Vt/dD1haXNfaHlicmlk" alt="maison">

      </div>
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Book this place!</h4>
          <form>
            <div class="mb-3">
              <label for="start_date" class="form-label">From:</label>
              <input type="date" id="start_date" class="form-control">
            </div>
            <div class="mb-3">
              <label for="end_date" class="form-label">To:</label>
              <input type="date" id="end_date" class="form-control">
            </div>
            <button type="submit" class="btn btn-success w-100">Book</button>
          </form>
        </div>
      </div>
      <div class="mt-3">
        <h5>Share</h5>
        <div class="d-flex justify-content-start">
          <a href="#" class="btn btn-link"><i class="fab fa-facebook"></i></a>
          <a href="#" class="btn btn-link"><i class="fab fa-twitter"></i></a>
          <a href="#" class="btn btn-link"><i class="fab fa-pinterest"></i></a>
          <a href="#" class="btn btn-link"><i class="fas fa-envelope"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
