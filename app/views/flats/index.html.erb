<nav class="navbar navbar-light bg-light">
  <div class="container">
    <%= link_to "Simple Airbnb", flats_path, class: "navbar-brand" %>
    <form class="d-flex" action="<%= flats_path %>" method="get">
      <input
        class="form-control me-2"
        type="search"
        name="query"
        placeholder="Search for flats"
        aria-label="Search"
        value="<%= params[:query] %>">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <a href="#" class="btn btn-primary ms-3">Add Flat</a>
  </div>
</nav>

<div class="container mt-5">
  <h1 class="mb-4">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <%= flat.address %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <span>
                <i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>
              </span>
              <span>
                <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
              </span>
            </div>
            <a href="#" class="btn btn-link mt-2">More info</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
